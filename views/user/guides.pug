extends userLayout 

block content-head 
    title Guides - Tourist Assistance
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css")
    link(rel="stylesheet", href="/assets/css/guides.css")

block content-body
    .filters
      label(for="language-filter") Filter by Language:
      select#language-filter
        option(value="") All Languages
      label(for="place-filter") Filter by Place:
      select#place-filter
        option(value="") All Places
      label(for="rating-filter") Minimum Rating:
      select#rating-filter
        option(value="0") Any Rating
        option(value="1") 1+
        option(value="2") 2+
        option(value="3") 3+
        option(value="4") 4+
        option(value="5") 5
      button#apply-filters Apply Filters

    .guides-container#guides-container
      //- Guide boxes will be dynamically inserted here

    #availabilityModal.modal
      .modal-content
        span.close &times;
        h2 Check Availability
        p Green dates are available, red dates are unavailable:
        #calendar

    script(src="https://cdn.jsdelivr.net/npm/flatpickr")
    script(src="/assets/js/guides.js") 
