extends userLayout

block content-head
    title User Dashboard - India Tourism
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap", rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css", rel="stylesheet")
    link(rel="stylesheet" href="/assets/css/dashboard.css")

block content-body
    main.main-content
        .profile-section
            .profile-header
                img(src=`` alt="Profile Picture")
                button.edit-btn(onclick="openOverlay('profilePicOverlay')") 
                    i.fa.fa-edit
                .profile-info
                    h1#userName= userName
                    p#userTitle Travel Enthusiast
            .profile-details
                .detail-item
                    h3 Email
                    p#userEmail= userEmail
                .detail-item
                    h3 Phone
                    p#userPhone= userPhone
                .detail-item
                    h3 Location
                    p#userLocation= userLocation
                .detail-item
                    h3 Member Since
                    p#userMemberSince= userMemberSince
                .detail-item
                    h3 Trips Planned
                    p#userTrips= userTrips
                .detail-item
                    h3 Favorite Destination
                    p#userFavoriteDestination= userFavoriteDestination

            //- Profile Picture Edit Overlay
            .overlay(id="profilePicOverlay")
                .overlay-content.update-section
                    span.close-btn(onclick="closeOverlay()") &times;
                    h2 Edit Profile Picture
                    form.edit-form#form-profile-pic(enctype="multipart/form-data")
                        input(type="file" name="profile_pic" accept="image/*" required)
                        button(type="submit") Save Changes

    script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.7/axios.min.js") 
    script(src="/assets/js/dashboard.js")
