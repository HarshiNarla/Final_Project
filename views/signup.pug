extends layout 

block content-head 
    title Sign Up - Tourist Assistance
    link(rel="stylesheet", href="/assets/css/signup.css")

block content-body
    .signup-container
      h2 Create Your Account
      form#signupForm(action="/signup" method="post")
        fieldset
          legend Personal Information
          .form-group
            label(for="firstName") First Name
            input(type="text" name="firstName" id="firstName" placeholder="Enter first name" required)
          .form-group
            label(for="lastName") Last Name
            input(type="text" name="lastName" id="lastName" placeholder="Enter last name" required)
          .form-group
            label(for="location") Location
            input(type="text" name="location" id="location" placeholder="Enter your location" required)

        fieldset
          legend Account Information
          .form-group
            label(for="phone") Phone Number
            input(type="text" name="phone" id="phone" placeholder="Enter your phone number" required)
          .form-group
            label(for="signupEmail") Email Address
            input(type="email" name="signupEmail" id="signupEmail" placeholder="Enter email address" required)
          .form-group
            label(for="signupPassword") Password
            input(type="password" name="signupPassword" id="signupPassword" placeholder="Enter password" required)
          .form-group
            label(for="confirmPassword") Confirm Password
            input(type="password" id="confirmPassword" placeholder="Confirm password" required)
          .form-group
            label(for="favoriteDestination") Favorite Destination
            input(type="text" name="favoriteDestination" id="favoriteDestination" placeholder="Enter your favorite destination" required)

        fieldset
          legend Terms and Agreement
          .form-group.terms-container
            input(type="checkbox" id="termsCheckbox")
            label(for="termsCheckbox") I agree to the 
              a(href="#") Terms and Conditions

        // Error message
        .error-message#errorMessage It is mandatory to agree to the Terms and Conditions.
        
        button(type="submit") Create Account

      .signup-option
        | Already have an account? 
        a.signup-link(href="/login") Sign In

    script(src="/assets/js/signup.js")
